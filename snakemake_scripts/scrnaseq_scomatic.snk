	threads: 20
	group: "scomatic"
	container:
		config["singularity"]["scomatic"]
	resources:
		time = 3*60,
		mem_mb = 12000
	shell:
		""" 
		/bin/bash -c \
			'source activate SComatic; \
			python {input.scomatic_script} \
					--infile {input.base_cell_counts} \
